<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/team_nextmatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/team_banner_size"
        android:paddingBottom="@dimen/margin_tiny"
        android:paddingLeft="@dimen/margin_general"
        android:paddingRight="@dimen/margin_general"
        android:paddingTop="@dimen/margin_tiny">

        <ImageView
            android:id="@+id/home_team_photo"
            android:layout_width="@dimen/team_banner_photo"
            android:layout_height="@dimen/team_banner_photo"
            android:src="@drawable/barcelonabadge"
            app:layout_constraintBottom_toTopOf="@id/home_team"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/match_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_team"
            android:layout_width="@dimen/match_constraints"
            android:layout_height="wrap_content"
            tools:text="FC Barcelona"
            android:textColor="@color/blackAlpha90"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/match_date"
            app:layout_constraintTop_toBottomOf="@id/home_team_photo" />

        <ImageView
            android:id="@+id/away_team_photo"
            android:layout_width="@dimen/team_banner_photo"
            android:layout_height="@dimen/team_banner_photo"
            android:src="@drawable/juventusbadge"
            app:layout_constraintBottom_toTopOf="@id/away_team"
            app:layout_constraintLeft_toRightOf="@id/match_date"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/away_team"
            android:layout_width="@dimen/match_constraints"
            android:layout_height="wrap_content"
            tools:text="Juventus Turyn"
            android:textAlignment="center"
            android:textColor="@color/blackAlpha90"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/match_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/away_team_photo" />


        <TextView
            android:id="@+id/match_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/home_team_photo"
            app:layout_constraintRight_toLeftOf="@id/away_team_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307"
            tools:text="@string/match_date_short" />

        <TextView
            android:id="@+id/match_hour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="@string/match_hour"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/home_team_photo"
            app:layout_constraintRight_toLeftOf="@id/away_team_photo"
            app:layout_constraintTop_toBottomOf="@id/match_date"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>