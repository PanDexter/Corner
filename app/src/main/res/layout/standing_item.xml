<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/standing_item"
        android:layout_width="match_parent"
        android:layout_height="25dp">


        <TextView
            android:id="@+id/position"
            style="@style/Text.General"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline_position"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/club_name"
            style="@style/Text.General.LightFont"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:layout_marginLeft="@dimen/margin_normal"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_position"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="FC Barcelona" />

        <TextView
            android:id="@+id/played"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_played"
            app:layout_constraintRight_toLeftOf="@id/guideline_won"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5" />

        <TextView
            android:id="@+id/won"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_won"
            app:layout_constraintRight_toLeftOf="@id/guideline_drown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="3" />

        <TextView
            android:id="@+id/drown"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_drown"
            app:layout_constraintRight_toLeftOf="@id/guideline_lost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/lost"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_lost"
            app:layout_constraintRight_toLeftOf="@id/guideline_lost_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/goals_difference"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_lost_end"
            app:layout_constraintRight_toLeftOf="@id/guideline_difference"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="15" />

        <TextView
            android:id="@+id/points"
            style="@style/Text.Medium.Bold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraints"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/guideline_difference"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_drown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_lost_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>