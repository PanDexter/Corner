<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_scoreboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/rv_item_height"
    android:paddingBottom="@dimen/margin_tiny"
    android:paddingLeft="@dimen/margin_general"
    android:paddingRight="@dimen/margin_general"
    android:paddingTop="@dimen/margin_tiny">

    <ImageView
        android:id="@+id/home_team_photo"
        android:layout_width="@dimen/rv_scoreboard_photo"
        android:layout_height="@dimen/rv_scoreboard_photo"
        android:src="@drawable/fc_barcelona_badge"
        app:layout_constraintBottom_toTopOf="@+id/home_team"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/match_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_team"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        tools:text="FC Barcelona"
        android:textColor="@color/blackAlpha90"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/match_date"
        app:layout_constraintTop_toBottomOf="@+id/home_team_photo" />

    <ImageView
        android:id="@+id/away_team_photo"
        android:layout_width="@dimen/rv_scoreboard_photo"
        android:layout_height="@dimen/rv_scoreboard_photo"
        android:src="@drawable/juventus_turin_badge"
        app:layout_constraintBottom_toTopOf="@+id/away_team"
        app:layout_constraintLeft_toRightOf="@+id/match_date"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/away_team"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        tools:text="Juventus Turyn"
        android:textAlignment="center"
        android:textColor="@color/blackAlpha90"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/match_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/away_team_photo" />

    <TextView
        android:id="@+id/match_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="@string/match_date_example"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_team_photo"
        app:layout_constraintRight_toLeftOf="@+id/away_team_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/home_score"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        tools:text="2"
        app:layout_constraintTop_toTopOf="@+id/match_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_team"
        app:layout_constraintRight_toLeftOf="@+id/dash" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/match_date"
        app:layout_constraintLeft_toRightOf="@+id/home_score"
        app:layout_constraintRight_toLeftOf="@+id/away_score"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/away_score"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        tools:text="1"
        app:layout_constraintTop_toTopOf="@+id/match_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/away_team"
        app:layout_constraintLeft_toRightOf="@+id/dash" />


</androidx.constraintlayout.widget.ConstraintLayout>
